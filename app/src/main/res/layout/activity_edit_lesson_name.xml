<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.bu22.android.editlesson.EditLessonNameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txt_edit_lesson_name"
        android:layout_margin="@dimen/name_lesson"
        android:textSize="@dimen/name_lesson"
        android:text="@string/btn_edit_lesson_name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_alignStart="@+id/txt_edit_lesson_name"
        android:layout_below="@+id/txt_edit_lesson_name"
        android:layout_marginStart="13dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="@dimen/name_lesson" />

    <EditText
        android:id="@+id/edit_lesson_name"
        android:layout_width="@dimen/edt_lesson_name_la"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_edit_lesson_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_lesson_name"
        android:layout_below="@+id/edit_lesson_name"
        android:layout_marginTop="25dp"
        android:text="@string/btn_ok" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ok"
        android:layout_alignBottom="@+id/btn_ok"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btn_ok"
        android:text="@string/btn_cancel" />

</RelativeLayout>
